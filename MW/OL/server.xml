<?xml version="1.0" encoding="UTF-8"?><server description="testdb server">
    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-8.0</feature>
        <feature>adminCenter-1.0</feature>
        
        <feature>jsp-2.3</feature>
        <feature>jdbc-4.2</feature>
        
    </featureManager>
    
    <!-- CHAR SET -->
    <webContainer defaultCharset = "UTF-8" enableClientBasedLocale="true"/>
    
    <!-- Declare the runtime database -->
    <dataSource id="db2DataSource" jndiName="/jdbc/db2DataSource">
      <jdbcDriver libraryRef="db2JDBCLib"/>
      <properties.db2.jcc databaseName="TESTDB" currentSchema="DB2INST1"
                          serverName="localhost" portNumber="50000"
                          user="db2inst1" password="passw0rd"/>
    </dataSource>

    <!-- C:\wlp\usr\shared\resources\db2 db2jcc4.jar -->
    <!-- https://www.ibm.com/docs/ja/was-liberty/base?topic=liberty-directory-locations-properties -->
    <library id="db2JDBCLib">
        <fileset dir="${shared.resource.dir}/db2/java" includes="*.jar"/>
    </library>
    
    
    <basicRegistry id="basic">
        <user name="admin" password="adminpwd"/>
        <user name="reader" password="readerpwd"/>
    </basicRegistry>
    
    <administrator-role>
        <user>admin</user>
    </administrator-role>
    
    <reader-role>
        <user>reader</user>
    </reader-role>
    
    <keyStore id="defaultKeyStore" password="Liberty" />

    <!-- adminCenter server.xml -->
    <remoteFileAccess>
        <writeDir>${server.config.dir}</writeDir>
    </remoteFileAccess>
    
    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint" httpPort="9080" httpsPort="9443"/>
 
    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>
    
    
</server>